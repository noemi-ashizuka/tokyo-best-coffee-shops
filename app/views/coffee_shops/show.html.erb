<h1><%=@coffee_shop.name %></h1>

<% if @coffee_shop.photo.attached? %>
  <%= cl_image_tag @coffee_shop.photo.key, width: 300, height: 200 %>
<% else %>
  <p>No Image yet</p>
<% end %>

<p><%= @coffee_shop.address %></p>

<% @coffee_shop.reviews.each do |review| %>
  <p><%= review.rating %></p>
  <p><%= review.content %></p>
<% end %>

<%= link_to 'Delete', coffee_shop_path, method: :delete, class: "btn btn-danger" %>
<%= link_to 'Edit', edit_coffee_shop_path, class: "btn btn-warning" %>
<h3><%= link_to coffee_shops_path do %>
  <i class="fas fa-arrow-left"></i>
<% end %></h3>