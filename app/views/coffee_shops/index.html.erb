<div class="index-content">
  <div class="index-list">
    <div>
      <%= render 'searchbar'%>
      <% if @coffee_shops.any? %>
        <% @coffee_shops.each do |shop| %>
          <%= link_to coffee_shop_path(shop), style: "text-decoration: none" do %>
            <h3 data-shop-id="<%= shop.id %>"><%= shop.name %></h3>
          <% end %>
        <% end %>
      <% else %>
        <p>No results</p>
      <% end %>
    </div>
  <%= link_to "Add a new Coffee Shop", new_coffee_shop_path, class: "button-thin", style: "text-decoration: none;" %>

  </div>
  <div id="map"
        class= "map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
